<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_horizontal_margin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="#fff"
        android:id="@+id/eName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Name"
        android:textColorHint="#fff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/eAge"
        android:layout_below="@+id/eName"
        android:textColor="#fff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Age"
        android:textColorHint="#fff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/eUsername"
        android:layout_below="@+id/eAge"
        android:textColorHint="#fff"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Username"
        android:textColor="#fff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ePassword"
        android:layout_below="@+id/eUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fff"
        android:hint="Password"
        android:textColorHint="#fff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/eConfirmPassword"
        android:layout_below="@+id/ePassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:hint="Confirm Password" />


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/register"
        android:id="@+id/bRegister"
        android:layout_below="@id/eConfirmPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/eAge"
        android:layout_alignEnd="@+id/eAge"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter" />
</RelativeLayout>




