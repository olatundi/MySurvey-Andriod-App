<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/summary"
    tools:context="com.example.isaac.mysurvey.FinishActivity">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:gravity="left"
            android:text="Summary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:id="@+id/linear1">

        <TextView
            android:id="@+id/genderText"
            android:layout_width="130dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Gender:" />

        <TextView
            android:id="@+id/genderValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text=""
            android:textAppearance="?android:attr/textAppearance" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1">

        <TextView
            android:id="@+id/etrText"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Entertainment:" />

        <TextView
            android:id="@+id/etrValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance" />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/linear3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/linear2">

    <TextView
        android:id="@+id/genreText"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="130dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Genre:" />

    <TextView
        android:id="@+id/genreValue"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_width="130dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearance" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear3">

        <TextView
            android:id="@+id/stmText"
            android:layout_width="130dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Stream/Download:" />

        <TextView
            android:id="@+id/stmValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear4">

        <TextView
            android:id="@+id/musicText"
            android:layout_width="130dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Music:" />

        <TextView
            android:id="@+id/musicValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear5">

        <TextView
            android:id="@+id/deviceText"
            android:layout_width="130dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Device:" />

        <TextView
            android:id="@+id/deviceValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear6">

        <TextView
            android:id="@+id/devUseText"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Device Use:" />

        <TextView
            android:id="@+id/devUseValue"
            android:layout_gravity="left"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear7">

        <TextView
            android:id="@+id/socialText"
            android:layout_width="130dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Social Media:" />

        <TextView
            android:id="@+id/socialValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear8">

        <TextView
            android:id="@+id/uTubeText"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="YouTube Use:" />

        <TextView
            android:id="@+id/uTubeValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear9">

        <TextView
            android:id="@+id/mobileText"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Mobile Apps Count:" />

        <TextView
            android:id="@+id/mobileValue"
            android:layout_gravity="left"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear10">

        <TextView
            android:id="@+id/employText"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Employment:" />

        <TextView
            android:id="@+id/employValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear11">

        <TextView
            android:id="@+id/expenseText"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Weekly Expense:" />

        <TextView
            android:id="@+id/expenseValue"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearance" />

    </LinearLayout>

    <Button
        android:text="Close App"
        android:layout_width="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="31dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:id="@+id/bClose"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

</LinearLayout>
