<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_quiz2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/genres"
    tools:context="com.example.isaac.mysurvey.Question3Activity">



    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Action/adventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:textColor="#02ffd1"
            android:textStyle="bold"
            android:layout_weight="1" />

        <RadioButton
            android:text="Comedy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:textColor="#02ffd1"
            android:textStyle="bold"
            android:layout_weight="1" />

        <RadioButton
            android:text="Drama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:textColor="#02ffd1"
            android:textStyle="bold"
            android:layout_weight="1" />

        <RadioButton
            android:text="Mystery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:textColor="#02ffd1"
            android:textStyle="bold"
            android:layout_weight="1" />

        <RadioButton
            android:text="Romance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton5"
            android:textColor="#02ffd1"
            android:textStyle="bold"
            android:layout_weight="1" />

        <RadioButton
            android:text="Slice of life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#02ffd1"
            android:textStyle="bold"
            android:id="@+id/radioButton6"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Which one of these is your most favourite type of genres?"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:textColor="#02ffd1"
        android:textStyle="bold"
        android:layout_marginStart="17dp"
        android:layout_marginTop="51dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Question 3"
        android:textColor="#02ffd1"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/textView4" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Next"
        android:id="@+id/bNext"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/next"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:cropToPadding="true"
        style="@android:style/Widget.Holo.Light.ImageButton"/>
</RelativeLayout>
